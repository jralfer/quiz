<p>
<table>
    <% quizes.forEach(function(quiz){ %>
    <tr>
        <td><a href="/quizes/<%= quiz.id %>"><%= quiz.pregunta %></a></td>
        <td><a href="/quizes/<%= quiz.id %>/edit"><button>Editar</button></a></td>
        <td><form method="post" action="/quizes/<%= quiz.id %>?_method=delete">
            <button type="submit" onClick="return confirm('Borrar: <%= quiz.pregunta %>');">Borrar</button>
        </form></td>
    </tr>
    <% })%>
</table>
</p>

<p>
<form method="get" action="/quizes/search">
    <p>Buscador de preguntas</p>
    <input type="text" name="search" id="search">
    <input type="submit" value="buscar">
</form>
</p>
<br>
<a href="/quizes/new"><button type="button">Crear pregunta</button> </a>